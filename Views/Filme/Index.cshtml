@{
}
﻿@model IEnumerable<FilmeModel>

    <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Filmes</h1>
        <a class="btn btn-success mx-2" asp-asp-controller="Cadastro" asp-action="Cadastrar">Cadastrar Filme</a>
    </div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Título</th>
                <th scope="col">Produtora</th>
                <th scope="col">Descricao</th>
                <th scope="col">Data de Estreia</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach(var filme in Model)
            {
                <tr>
                    <th scope="row">@filme.NomeDono</th>
                    <td>@filme.NomeAnimal</td>
                    <td>@filme.RacaAnimal</td>
                    <td>@filme.NomeFuncionario</td>
                        <td>
                            <a asp-controller="Cadastro" asp-action="Editar" asp-route-id="@filme.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Cadastro" asp-action="Excluir" asp-route-id="@filme.Id" class="btn btn-warning mx-2">Excluir</a>
                        </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
